<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_graph"
    app:startDestination="@id/splash_flow">

    <include app:graph="@navigation/splash_flow" />

    <include app:graph="@navigation/welcome_flow" />

    <include app:graph="@navigation/mainscreen_flow" />

    <action
        android:id="@+id/action_welcome_flow"
        app:destination="@id/welcome_flow"
        app:popUpTo="@id/root_graph" />

    <action
        android:id="@+id/action_mainscreen_flow"
        app:destination="@id/mainscreen_flow"
        app:popUpTo="@id/root_graph" />
</navigation>