<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="label_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/default_margin</item>
        <item name="android:layout_marginEnd">@dimen/default_margin</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="button_group_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/default_margin</item>
        <item name="android:layout_marginEnd">@dimen/default_margin</item>
        <item name="android:layout_marginBottom">@dimen/default_margin</item>
    </style>

    <style name="button_style" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="progress_bar_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
        <item name="android:visibility">gone</item>
        <item name="indicatorColor">@color/green_600</item>
        <item name="trackCornerRadius">1dp</item>
    </style>

    <style name="network_error_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_grey_description</item>
        <item name="android:textSize">@dimen/network_error_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="retry_button_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/retry_button_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/retry_button_margin_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/retry_button_margin_bottom</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>