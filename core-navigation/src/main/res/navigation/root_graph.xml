<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_graph"
    app:startDestination="@id/splash_fragment">

    <fragment
        android:id="@+id/splash_fragment"
        android:name="od.konstantin.krok.SplashFragment"
        android:label="Splash Fragment">
        <action
            android:id="@+id/action_splash_fragment_to_welcome_fragment"
            app:destination="@id/welcome_fragment" />
        <action
            android:id="@+id/action_splash_fragment_to_main_screen_fragment"
            app:destination="@id/main_screen_fragment" />
    </fragment>

    <fragment
        android:id="@+id/welcome_fragment"
        android:name="od.konstantin.feature_welcome.ui.WelcomeFragment">
        <action
            android:id="@+id/action_welcome_fragment_to_main_screen_fragment"
            app:destination="@id/main_screen_fragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popUpTo="@id/root_graph" />
    </fragment>

    <fragment
        android:id="@+id/main_screen_fragment"
        android:name="od.konstantin.feature_mainscreen.ui.MainScreenFragment" />

    <include app:graph="@navigation/booklets_flow" />

    <action
        android:id="@+id/action_to_booklets_flow"
        app:destination="@id/booklets_flow"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim" />
</navigation>